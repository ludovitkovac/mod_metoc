<?xml version='1.0' encoding='UTF-8' ?> 
<extension version="1.0" type="module" >
    <name>Metoc</name>
    <author> Ludovit Kovac </author>
    <version> 1.0 </version>
    <creationDate>March 2016</creationDate>
    <licence> </licence>
    <description>MOD_METOC_DESCRIPTION</description>
    <files>
        <filename module="mod_metoc">mod_metoc.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
    
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.mod_metoc.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_metoc.sys.ini</language>
        <language tag="de-DE">de-DE/de-DE.mod_metoc.ini</language>
        <language tag="de-DE">de-DE/de-DE.mod_metoc.sys.ini</language>
        <language tag="sk-SK">sk-SK/sk-SK.mod_metoc.ini</language>
        <language tag="sk-SK">sk-SK/sk-SK.mod_metoc.sys.ini</language>
    </languages>

    <media folder="media" destination="mod_metoc">
        <folder>js</folder>
    </media>
    
    <config> 
        <fields name="params">
            <fieldset name="advanced">
                <field name="NumberHidi" type="number" label="MOD_METOC_NUMBER_HIDI" default="5"></field>
                <field name="visibleHidi" type="list" label="MOD_METOC_VISIBLE">
                    <option value="SHOW">MOD_METOC_SHOW</option>
                    <option value="HIDE">MOD_METOC_HIDE</option>
                </field>
                    
                <field name="NumberWora" type="number" label="MOD_METOC_NUMBER_WORA" default="5"></field>
                <field name="visibleWora" type="list" label="MOD_METOC_VISIBLE">
                    <option value="SHOW">MOD_METOC_SHOW</option>
                    <option value="HIDE">MOD_METOC_HIDE</option> 
                </field>
                    
                <field name="NumberToday" type="number" label="MOD_METOC_NUMBER_TODAY" default="5"></field>
                <field name="visibleToday" type="list" label="MOD_METOC_VISIBLE">
                    <option value="SHOW">MOD_METOC_SHOW</option>
                    <option value="HIDE">MOD_METOC_HIDE</option>
                </field>
                    
                <field name="NumberWeek" type="number" label="MOD_METOC_NUMBER_LAST_WEEK" default="5"></field>
                <field name="visibleWeek" type="list" label="MOD_METOC_VISIBLE">
                    <option value="SHOW">MOD_METOC_SHOW</option>
                    <option value="HIDE">MOD_METOC_HIDE</option>
                </field>
                    
                <field name="NumberMonth" type="number" label="MOD_METOC_NUMBER_LAST_MONTH" default="5"></field>
                <field name="visibleMonth" type="list" label="MOD_METOC_VISIBLE">
                    <option value="SHOW">MOD_METOC_SHOW</option>
                    <option value="HIDE">MOD_METOC_HIDE</option>
                </field>
                    
                <field name="NumberThreeMonts" type="number" label="MOD_METOC_NUMBER_LAST_THREE_MONTHS" default="5"></field>
                <field name="visibleThreeMonts" type="list" label="MOD_METOC_VISIBLE">
                    <option value="SHOW">MOD_METOC_SHOW</option>
                    <option value="HIDE">MOD_METOC_HIDE</option>
                </field>
                    
                <field name="NumberLatest" type="number" label="MOD_METOC_NUMBER_LAST_NEWS" default="5"></field>
                <field name="visibleLatest" type="list" label="MOD_METOC_VISIBLE">
                    <option value="SHOW">MOD_METOC_SHOW</option>
                    <option value="HIDE">MOD_METOC_HIDE</option>
                </field>
                    
            </fieldset>
        </fields>

    </config>
</extension>